<UserControl x:Class="UICustom.Controls.UpGBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UICustom.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <SolidColorBrush x:Key="back" Color="#2D3742"></SolidColorBrush>
    </UserControl.Resources>

    <Grid>
        <Border CornerRadius="7,7,0,0" VerticalAlignment="Top" Height="30" Background="{StaticResource back}"></Border>
        <Border  Background="#19FFFFFF" Margin="7,30,7,7"/>
        <Border CornerRadius="0,0,7,7" VerticalAlignment="Bottom" Height="7" Background="{StaticResource back}"></Border>
        <Border CornerRadius="0" Width="7" Background="{StaticResource back}" HorizontalAlignment="Right" Margin="0,30,0,7"/>
        <Border CornerRadius="0" Width="7" Background="{StaticResource back}" HorizontalAlignment="Left" Margin="0,30,0,7"/>
    </Grid>
</UserControl>
