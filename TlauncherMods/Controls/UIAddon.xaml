<UserControl x:Class="TlauncherMods.Controls.UIAddon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TlauncherMods.Controls"
             mc:Ignorable="d" 
             >
    <!--Background="#B21A191A"-->
    <Grid Background="#B21A191A">
        <Grid>
            <Border Background="#FF757575" HorizontalAlignment="Left">
                <Image x:Name="image" Width="100" Height="100" Source="/Controls/0x6_m.jpg" Stretch="UniformToFill" ></Image>
            </Border>
            <StackPanel Margin="100,0,0,0">
                <Label x:Name="name_addon" Style="{DynamicResource StyleLabelTextLeft}" Content="nameaddon"></Label>
                <Label x:Name="description_addon" Style="{DynamicResource StyleLabelTextLeft}" Content="asdasdasdasdas"></Label>
            </StackPanel>
            <local:LBorder Margin="106,0,0,1" Content="Download" FontSize="15" Style="{StaticResource StyleBorderHover}" LabelStyle="{StaticResource StyleLabelText}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="80" PreviewMouseLeftButtonDown="LBorder_PreviewMouseLeftButtonDown"/>

        </Grid>

    </Grid>
</UserControl>
